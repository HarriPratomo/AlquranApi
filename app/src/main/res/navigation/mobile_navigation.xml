<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.alquran.ui.Surat.Fragment_Surat"
        android:label="@string/Surat"
        tools:layout="@layout/fragment_list_surat" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.alquran.ui.Ayat.DashboardFragment"
        android:label="@string/ayat"
        tools:layout="@layout/fragment_list_ayat" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.alquran.ui.Info.NotificationsFragment"
        android:label="@string/info"
        tools:layout="@layout/fragment_info" />
</navigation>
